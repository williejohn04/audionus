<tr style="border-bottom:1px solid #212121;">
    <td class="track-info-wrapper">
        <div class="row" style="margin-bottom: -10px !important;">
            
            <div class="col s1 m1 xl1 l1 left-align">
                <a href="javascript:void(0);"><img width="45px" height="45px" src="{{item.album.cover_small}}" class="responsive-img"> </a>
            </div>

            <div class="col s9 m9 xl5 l5 left-align">
                <a href="javascript:void(0);" class="white-text track-title clamp-overflow"> {{increaseNumber index 1}}. {{item.title}} {{#if item.explicit_lyrics}}<i class="material-icons grey-text lighten-5 tiny prefix">explicit</i> {{/if}} </a>
                {{#if item.contributors}}
                    <span class="clamp-overflow" style="-webkit-line-clamp: 1 !important;">
                        {{{getLinks item.contributors 'artist'}}}
                    </span>
                {{else}}
                    <a class="grey-text lighten-5 clamp-overflow" style="-webkit-line-clamp: 1 !important;" href="javascript:void(0);">{{item.artist.name}}</a>
                {{/if}}
            </div>

            <div class="col xl4 l4 hide-on-med-and-down">
                <a class="grey-text lighten-5 clamp-overflow" style="-webkit-line-clamp: 2 !important;" href="javascript:void(0);">{{item.album.title}}</a>
            </div>

            <div class="col s1 m1 l1 xl1 right-align">
                <a href="javascript:void(0);" class="grey-text">{{fixDuration item.duration}}</a>
            </div>

            <div class="col s1 m1 l1 xl1 right-align">
                <a href="javascript:void(0);" class="dropdown-trigger track-dropdown-trigger grey-text" data-target="track-list-menu"><i class="material-icons">more_vert</i></a>
                <ul id='track-list-menu' class="dropdown-content black" style="z-index: 10 !important;">
                    <li><a href="javascript:void(0);" class="white-text"> <i class="material-icons">favorite_border</i> Add to favorite </a></li>
                    <li><a href="javascript:void(0);" class="white-text"> <i class="material-icons">playlist_add</i> Add to Playlist </a></li>
                    <li><a href="/artist/{{item.artist.id}}" class="white-text"> <i class="material-icons">person_add</i> View Artist </a></li>
                    <li><a href="/album/{{item.album.id}}" class="white-text"> <i class="material-icons">album</i> View Album </a></li>
                </ul>
            </div>

        </div>
    </td>
</tr>

