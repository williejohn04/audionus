<div class="container">
    <div class="row mt-5">
        <div class="col s12 m12 xl4 l4 offset-xl2 offset-l2 ">
            <img src="{{album.cover_big}}" style="border: 1px solid #263238; border-radius: 25px;"  class="responsive-img">
        </div>
        <div class="col s12 m12 xl4 l4 left">
            <div class="row">
                <div class="col s12">
                    <h5 style="font-weight: bolder;" data-url="/album/{{album.id}}" data-title="{{album.title}}" id="playlist-detail">{{album.title}}</h5>
                </div>
                <div class="col mt-3">
                    <a href="/{{album.artist.id}}"><img src="{{album.artist.picture_small}}" width="35px" height="35px" alt="{{album.title}} by {{album.artist.name}}" class="responsive circle"></a>
                </div>
                <div class="col mt-4" style="margin-left: -10px;">
                    <span style="font-weight: bolder;"><a href="/artist/{{album.artist.id}}" class="grey-text lighten-5">{{album.artist.name}}</a></span>
                </div>
            </div>

            <div class="row" style="margin-top: -15px;">
                <div class="col">
                    <small class="grey-text lighten-5">{{album.record_type}} {{changeDateFormat album.release_date}} - tracks: {{album.nb_tracks}} - duration: {{fixDuration album.duration 'album'}} </small>
                    <br>
                    <small class="grey-text lighten-5">label: {{album.label}} - genre: {{{getLinks album.genres.data 'genre'}}} </small>
                </div>
            </div>

        </div>
        <div class="col s12 m12 xl12 l12 mt-5">
            {{> track_list_1 (object items=album.tracks.data) }}

        </div>
    </div>

    <div id="more-albums-wrapper" style="margin-bottom: 10rem !important;">
        {{> card_slide (object cardTitle=cardTitle idName="more-albums-card" cardTextFrom="title" items=othersAlbum.data.data ) }}
    </div>
</div>

<script>
    $(function() {
        initSplide('#more-albums-card')
    })
</script>
