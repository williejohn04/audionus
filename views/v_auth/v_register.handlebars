<div class="grey darken-3 section"></div>
  <main class="grey darken-3">
    <center>
      <img class="responsive-img" style="width: 250px;" src="/images/logo/white-no-bg.png" />
      <div class="section"></div>

      <div class="container">
        <div class="z-depth-5 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
          {{#if formErrors}}
            
            <div class="col s12">
              {{#each formErrors}}
                <small class="red-text darken-4">{{this.msg}}</small> <br>
              {{/each}}
            </div>
          {{/if}}
          <form class="col s12" method="post" action="/auth/register">
            <div class='row'>
              <div class='col s12'>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <input type='text' name='username' id='username' autocomplete="off" />
                <label for='username'>username</label>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <input type='email' name='email' id='email' autocomplete="off" />
                <label for='email'>Enter your email</label>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <input type='password' name='password' id='password' autocomplete="off" />
                <label for='password'>Enter your password</label>
              </div>
            </div>

            <br />
            <center>
              <div class='row'>
                <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect grey darken-4'>Register</button>
              </div>
            </center>
          </form>
        </div>
      </div>
      <a href="/auth/login">Already Have an Account?</a>
    </center>

    <div class="section"></div>
  </main>
</body>