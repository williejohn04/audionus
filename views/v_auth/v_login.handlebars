<div class="grey darken-3 section"></div>
  <main class="grey darken-3">
    <center>
      <img class="responsive-img" style="width: 250px;" src="/images/logo/white-no-bg.png" />
      <div class="section"></div>

      <div class="container">
        <div class="z-depth-5 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
          {{#if flashMsg}}            
            <div class="col s12">
                <small class="red-text darken-4">{{flashMsg.error}}</small> <br>
            </div>
          {{/if}}
          <form class="col s12" method="post" action="/auth/login">
            <div class='row'>
              <div class='col s12'>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <input type='text' name='username' id='username' autocomplete="off" />
                <label for='username'>Username or Email</label>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <input type='password' name='password' id='password' autocomplete="off" />
                <label for='password'>Enter your password</label>
              </div>
            </div>

            <br />
            <center>
              <div class='row'>
                <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect grey darken-4'>Login</button>
              </div>
            </center>
          </form>
        </div>
      </div>
      <a href="/auth/register">didn't have an account?</a>
    </center>

    <div class="section"></div>
  </main>
</body>